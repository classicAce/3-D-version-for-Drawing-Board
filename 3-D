        }

        #sidebar {
            width: 80px;
            background-color: #eee;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            transform: rotateY(20deg);
        }

        .tool {
            margin-bottom: 10px;
            cursor: pointer;
            transform: rotateY(-20deg);
        }

        #shapes {
            display: flex;
            flex-direction: column;
        }

        .shape {
            margin-bottom: 5px;
            cursor: pointer;
            transform: rotateY(-20deg);
        }
    </style>
    <title>Drawing Dashboard</title>
