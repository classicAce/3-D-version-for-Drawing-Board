<body>
    <div id="canvas-container">
        <canvas id="canvas" width="600" height="400"></canvas>
    </div>
    <div id="sidebar">
        <div class="tool" onclick="selectPen()">
            ‚úèÔ∏è
        </div>
        <div class="tool" onclick="selectEraser()">
            üßΩ
        </div>
        <div id="shapes">
            <div class="shape" onclick="drawCube()">üî∑</div>
            <div class="shape" onclick="drawSphere()">‚ö™</div>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('canvas');
        const context = canvas.getContext('2d');
        let drawing = false;
        let eraser = false;
        let penColor = 'black';

        function startDrawing(e) {
            drawing = true;
            draw(e);
        }

        function stopDrawing() {
            drawing = false;
            context.beginPath();
        }

        function draw(e) {
            if (!drawing) return;

            context.lineWidth = eraser ? 20 : 2;
            context.lineCap = 'round';
            context.strokeStyle = eraser ? '#f0f0f0' : penColor;

            context.lineTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
            context.stroke();
            context.beginPath();
            context.moveTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
        }

        function selectPen() {
            eraser = false;
        }

        function selectEraser() {
            eraser = true;
        }

        function selectColor(color) {
            penColor = color;
            eraser = false;
        }

        function drawCube() {
            context.fillStyle = penColor;
            context.fillRect(200, 150, 100, 100);
        }

        function drawSphere() {
            context.beginPath();
            context.arc(300, 200, 50, 0, 2 * Math.PI);
            context.fillStyle = penColor;
            context.fill();
            context.stroke();
        }

        canvas.addEventListener('mousedown', startDrawing);
        canvas.addEventListener('mouseup', stopDrawing);
        canvas.addEventListener('mousemove', draw);
    </script>
</body>
</html>
